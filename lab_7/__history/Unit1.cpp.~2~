//---------------------------------------------------------------------------
void __fastcall TForm1::Button2Click(TObject *Sender)
{
	try
	{
		TStringList *list = new TStringList();
		list->LoadFromFile("Students information.txt");
		Memo1->Clear();
		Memo1->Text = list->Text;
	}
	catch(...)
	{
		ShowMessage("Τΰιλ «Students information.txt» νε νΰιδεν!");
	}
